<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
        <title>Note Taking App</title>
    </head>
<body>
    <%- include('./partials/header'); %>

    <div class="container">
        <br>
        <div class="text-center"><h2>Add New Note</h2></div>
        <br>
        <div>
            <form action="/addNote" method="POST">
                <label for="title">Note Title:</label><br>
                <input class="form-control" type="text" id="title" name="title" required><br><br>

                <label class="mb-2" for="description">Description:</label><br>
                <textarea class="form-control" id="description" name="description" rows="4" cols="50" required>  </textarea> <br>
                <br>
                <label for="category" class="mb-2">Category:</label><br>
                <select class="form-select w-25" name="categoryid" id="categoryid">
                  <% for(let i=0; i < categories.length; i++) { %>
                    <tr>
                      <option value="<%= categories[i].categoryId %>"><%= categories[i].label %></option>
                  <% } %>
                </select><br><br>
                <div class="d-flex">
                    <button type="submit" class="btn btn-primary">Add Note</button>
                    <div class="mx-3"></div>
                    <a href="/" class="btn btn-secondary">Back</a>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
